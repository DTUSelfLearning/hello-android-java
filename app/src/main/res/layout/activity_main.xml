<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_header"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:paddingBottom="-25dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_im1" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/img_header"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-25dp"
        android:src="@drawable/ic_im2" />

    <ImageView
        android:id="@+id/im_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/img_header"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_im2" />

    <TextView
        android:id="@+id/tv_surName"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_header"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/im_avatar"
        android:text="Name Surname"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_surName"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@id/im_avatar"
        android:text="Two minutes ago"
        android:textSize="15dp"
        android:textStyle="italic" />

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/im_avatar"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:text="Title"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="Comments:"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@id/ll_title"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:text="Loren ipsum dolor sit amet, consectetur adipiscing elit. Nam sed ornare puthsdbv shvnhnv hvnc  chn dgfsdg dbsc bds"
            android:textSize="17sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="25dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="Loren ipsum dolor sit amet, consectetur adipiscing elit. Nam sed ornare puthsdbv shvnhnv hvnc  chn dgfsdg dbsc bds"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/ll_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="35dp"
            android:layout_weight="1"
            android:text="HIDE"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@color/colorBlue"
            android:text="COMMENT"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginRight="35dp"
            android:layout_weight="1"
            android:text="SHARE"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
